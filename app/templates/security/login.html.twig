{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/5/journal/bootstrap.min.css">
    <link rel="stylesheet" href="{{asset('css/styles4.css') }}">
    <link rel="stylesheet" href="{{asset('css/styles.css') }}">

{% endblock %}
{% block body %}
    <div class="container10">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Zaloguj się</h1>
            <div class="col-md-8 col-lg-6">
            <div class="mb-3 row">
            <label for="inputEmail" class="col-form-label col-sm-2 required">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="mb-3 row">
            <label for="inputPassword" class="col-form-label col-sm-2 required">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            </div></div>
            <button class="btn btn-lg btn-primary" type="submit">Zaloguj się</button>
            <a class="btn btn-lg btn-primary"  href="{{ url('home_index') }}" title="{{ 'label.action.homeback'|trans }}">
                {{ 'label.action.homeback'|trans }}
            </a>
        </form>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/5/journal/bootstrap.min.css">
    <link rel="stylesheet" href="{{asset('css/styles.css') }}">
{% endblock %}

{% block title %}
    {{ 'title_type_list'|trans }}
{% endblock %}
{% block body %}
<div class="wszystko">
<div class="lewo">
    {% if pagination is defined and pagination|length %}
    <div>
        <h2>{{ 'title_type_list'|trans }}</h2>
        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped ">
            <thead>
            <tr>
                <th>{{knp_pagination_sortable(pagination, 'label.id'|trans, 'l.id')}}</th>
                <th>{{knp_pagination_sortable(pagination, 'label.name_type'|trans, 'l.name') }}</th>
                <th>{{ 'label_action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for type in pagination %}
                <tr>
                    <td>{{ type.id }}</td>
                    <td>{{ type.name }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ url('type_edit', {id: type.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a class="btn btn-primary" href="{{ url('type_delete', {id: type.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <a class="btn btn-primary" href="{{ url('type_new')}}" title="{{ 'action.add_type'|trans }}">
            {{ 'action.add_type'|trans }}
        </a>
        {% else %}
            <p>
                {{ 'message.empty_list'|trans }}
            </p>
            <a class="btn btn-primary" href="{{ url('type_new')}}" title="{{ 'action.add_type'|trans }}">
                {{ 'action.add_type'|trans }}
            </a>
        {% endif %}
    </div>
    <div class="prawo">
        {% if pagination1 is defined and pagination1|length %}
        <div>
            <h2>{{ 'title_category_list'|trans }}</h2>
            <div class="pagination">
                {{ knp_pagination_render(pagination1) }}
            </div>

            <table class="table table-striped ">
                <thead>
                <tr>
                    <th>{{knp_pagination_sortable(pagination1, 'label.id'|trans, 'l.id')}}</th>
                    <th>{{knp_pagination_sortable(pagination1, 'label.name_category'|trans, 'l.name') }}</th>
                    <th>{{ 'label_action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for category in pagination1 %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a class="btn btn-primary" href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                            <a class="btn btn-primary" href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination1) }}
            </div>
            <a class="btn btn-primary" href="{{ url('category_new')}}" title="{{ 'action.add_category'|trans }}">
                {{ 'action.add_category'|trans }}
            </a>
            {% else %}
                <p>
                    {{ 'message.empty_list'|trans }}
                </p>
                <a class="btn btn-primary" href="{{ url('category_new')}}" title="{{ 'action.add_category'|trans }}">
                    {{ 'action.add_category'|trans }}
                </a>
            {% endif %}
    </div>
    </div>
    {% endblock %}
